doctype html
.courses-panel
  .header
    h2.title All Courses
    button(mat-mini-fab)
      mat-icon.add-course-btn((click)='onAddCourse()') add
  .counters
    p In Promo: {{promoTotal$ | async}}
  .spinner-container(*ngIf='!(loading$ | async )')
    mat-spinner
  mat-tab-group
    mat-tab(label='Beginners')
      courses-card-list((courseChanged)='reload()', [courses]='beginnerCourses$ | async')
    mat-tab(label='Advanced')
      courses-card-list((courseChanged)='reload()', [courses]='advancedCourses$ | async')
